<div class="container">
    <h1><%= @cocktail.name %></h1>
    <br>
    <br>
    <%= link_to "Delete", cocktail_path(@cocktail),
      method: :delete,
      data: { confirm: "Are you sure?" }, class: "btn btn-primary"%>
    
    <%= link_to "Add a dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>
    <br>
    <br>
    
    <table>
      <thead>
        <tr>
          <th>Comment</th>
          <th>Rating</th>
     
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @cocktail.doses.each do |dose| %>
          <tr>
            <td><%= dose.description %></td>
            <td><%= dose.ingredient.name %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    
    <br>
    
    <%= link_to("Back to list", "/cocktails", class: "btn btn-primary") %>
    
  </div>
  
  